# Reaction speed game

# How to play?
# Press "s" key on your keyboard when you are ready
# Countdown starts
# Press space key when you see the last 2 rows of lights turn into darkgreen


# Imports
import turtle, time, random

# Window
wn = turtle.Screen()
wn.setup(width=600, height=600)
wn.bgcolor("gray")
wn.title("Reaction speed game")

# Best reaction time preset
best_react = 10000

# Reaction time
rt = turtle.Turtle()
rt.speed(0)
rt.color("white")
rt.penup()
rt.hideturtle()
rt.goto(0, 220)
rt.write("Your time was _ s", align="center", font=("calabri", 24, "normal"))

# Best reaction time
brt = turtle.Turtle()
brt.speed(0)
brt.color("white")
brt.penup()
brt.hideturtle()
brt.goto(0, 190)
brt.write("Your best was _ s", align="center", font=("calabri", 24, "normal"))

# Starting lights design


# Rectangles

# Rectangle 1
rec1 = turtle.Turtle()
rec1.speed(0)
rec1.color("black")
rec1.begin_fill()
rec1.penup()
rec1.goto(-240, 160)
rec1.pendown()
rec1.forward(80)
rec1.right(90)
rec1.forward(320)
rec1.right(90)
rec1.forward(80)
rec1.right(90)
rec1.forward(320)
rec1.end_fill()
rec1.hideturtle()

# Rectangle 2
rec2 = turtle.Turtle()
