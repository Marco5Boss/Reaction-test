li23.goto(0, 40)

# Forth light
li24 = turtle.Turtle()
li24.speed(0)
li24.shape("circle")
li24.turtlesize(3)
li24.color("darkgreen")
li24.penup()
li24.goto(100, 40)

# Fifth light
li25 = turtle.Turtle()
li25.speed(0)
li25.shape("circle")
li25.turtlesize(3)
li25.color("darkgreen")
li25.penup()
li25.goto(200, 40)

# Third row

# First light
li31 = turtle.Turtle()
li31.speed(0)
li31.shape("circle")
li31.turtlesize(3)
li31.color("darkgreen")
li31.penup()
li31.goto(-200, -40)

# Second light
li32 = turtle.Turtle()
li32.speed(0)
li32.shape("circle")
li32.turtlesize(3)
li32.color("darkgreen")
li32.penup()
li32.goto(-100, -40)

# Third light
li33 = turtle.Turtle()
li33.speed(0)
li33.shape("circle")
li33.turtlesize(3)
li33.color("darkgreen")
li33.penup()
li33.goto(0, -40)

# Forth light
li34 = turtle.Turtle()
li34.speed(0)
li34.shape("circle")
li34.turtlesize(3)
li34.color("darkgreen")
li34.penup()
li34.goto(100, -40)

# Fifth light
li35 = turtle.Turtle()
li35.speed(0)
li35.shape("circle")
li35.turtlesize(3)
li35.color("darkgreen")
li35.penup()
li35.goto(200, -40)

# Forth row

# First light
li41 = turtle.Turtle()
li41.speed(0)
li41.shape("circle")
li41.turtlesize(3)
li41.color("darkgreen")
li41.penup()
li41.goto(-200, -120)

# Second light
li42 = turtle.Turtle()
li42.speed(0)
li42.shape("circle")
li42.turtlesize(3)
li42.color("darkgreen")
li42.penup()
li42.goto(-100, -120)

# Third light
li43 = turtle.Turtle()
li43.speed(0)
li43.shape("circle")
li43.turtlesize(3)
li43.color("darkgreen")
li43.penup()
li43.goto(0, -120)

# Forth light
li44 = turtle.Turtle()
li44.speed(0)
li44.shape("circle")
li44.turtlesize(3)
li44.color("darkgreen")
li44.penup()
li44.goto(100, -120)

# Fifth light
li45 = turtle.Turtle()
li45.speed(0)
li45.shape("circle")
li45.turtlesize(3)
li45.color("darkgreen")
li45.penup()
li45.goto(200, -120)

# Loop
while True:
    wn.update()


    # Starting
    def start():

        # The animation of countdown to the start
        time.sleep(1)

        li31.color("red")
        li41.color("red")
        time.sleep(1)

        li32.color("red")
        li42.color("red")
        time.sleep(1)

        li33.color("red")
        li43.color("red")
        time.sleep(1)

        li34.color("red")
        li44.color("red")
        time.sleep(1)

        li35.color("red")
        li45.color("red")
        wait_time = random.uniform(2, 6)
        time.sleep(wait_time)

        global start_time
        start_time = time.time()

        # The animation of lights out
        li31.color("darkgreen")
        li41.color("darkgreen")
        li32.color("darkgreen")
        li42.color("darkgreen")
        li33.color("darkgreen")
        li43.color("darkgreen")
        li34.color("darkgreen")
        li44.color("darkgreen")
        li35.color("darkgreen")
        li45.color("darkgreen")


    # Departure
    def end():
        end_time = time.time()

        reaction_time = end_time - start_time

        # Reaction time and best reaction time update
        global best_react
        if reaction_time < best_react:
            best_react = reaction_time

            rt.clear()
            rt.write("Your time was {} s".format(round(reaction_time, 5)), align="center",
                     font=("calabri", 24, "normal"))

            brt.clear()
            brt.write("Your best was {} s".format(round(best_react, 5)), align="center", font=("calabri", 24, "normal"))

        else:
            rt.clear()
            rt.write("Your time was {} s".format(round(reaction_time, 5)), align="center",
                     font=("calabri", 24, "normal"))

            brt.clear()
            brt.write("Your best was {} s".format(round(best_react, 5)), align="center", font=("calabri", 24, "normal"))

            # Controls


    wn.listen()
    wn.onkeypress(start, "s")
    wn.onkeypress(end, "space")

wn.mainloop()
