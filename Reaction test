rec5.hideturtle()

# Lights


# First row

# First light
li11 = turtle.Turtle()
li11.speed(0)
li11.shape("circle")
li11.turtlesize(3)
li11.color("darkgreen")
li11.penup()
li11.goto(-200, 120)

# Second light
li12 = turtle.Turtle()
li12.speed(0)
li12.shape("circle")
li12.turtlesize(3)
li12.color("darkgreen")
li12.penup()
li12.goto(-100, 120)

# Third light
li13 = turtle.Turtle()
li13.speed(0)
li13.shape("circle")
li13.turtlesize(3)
li13.color("darkgreen")
li13.penup()
li13.goto(0, 120)

# Forth light
li14 = turtle.Turtle()
li14.speed(0)
li14.shape("circle")
li14.turtlesize(3)
li14.color("darkgreen")
li14.penup()
li14.goto(100, 120)

# Fifth light
li15 = turtle.Turtle()
li15.speed(0)
li15.shape("circle")
li15.turtlesize(3)
li15.color("darkgreen")
li15.penup()
li15.goto(200, 120)

# Second row

# First light
li21 = turtle.Turtle()
li21.speed(0)
li21.shape("circle")
li21.turtlesize(3)
li21.color("darkgreen")
li21.penup()
li21.goto(-200, 40)

# Second light
li22 = turtle.Turtle()
li22.speed(0)
li22.shape("circle")
li22.turtlesize(3)
li22.color("darkgreen")
li22.penup()
li22.goto(-100, 40)

# Third light
li23 = turtle.Turtle()
li23.speed(0)
li23.shape("circle")
li23.turtlesize(3)
